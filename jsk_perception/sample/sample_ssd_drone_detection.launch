<launch>

  <arg name="gui" default="true" />
  <arg name="gpu" default="0" />

  <arg name="input_image" value="test/image_raw" />
  <arg name="network_model" default="$(find jsk_perception)/trained_data/2019-04-28-07-04-27_ssd_drone_tracking_training_result/ssd_trained.npz"/>

  <arg name="use_static_image" default="true"/>
  <arg name="image_file" default="$(find jsk_perception)/learning_datasets/2019-04-28-07-04-27_ssd_drone_tracking_training_data/Screenshot_from_2019-04-29_19-45-46.png"/>
  <node name="image_publisher"
        pkg="jsk_perception" type="image_publisher.py"
        clear_params="true" if="$(arg use_static_image)">
    <rosparam subst_value="true">
      file_name: $(arg image_file)
      rate: 1
    </rosparam>
    <remap from="/image_publisher/output" to="$(arg input_image)" />
  </node>

  <arg name="video_file" default="$(find jsk_perception)/sample/data/drone_tracking_sample1.MP4" />
  <include file="$(find video_stream_opencv)/launch/camera.launch" unless="$(arg use_static_image)" >
    <arg name="video_stream_provider" value="$(arg video_file)" />
    <arg name="buffer_queue_size" value="1" />
    <arg name="fps" value="1" />
    <arg name="camera_name" value="test" />
  </include>


  <node name="ssd_object_detector"
        pkg="jsk_perception" type="ssd_object_detector.py"
        output="screen" >
    <remap from="~input" to="$(arg input_image)" />
    <rosparam subst_value="true">
      gpu: $(arg gpu)
      label_names: [drone]
    </rosparam>
    <param name="score_thresh" value="0.9" />
    <param name="model_path" value="$(arg network_model)" />
  </node>

  <node name="image_view"
        pkg="image_view" type="image_view"
        if="$(arg gui)">
    <remap from="image" to="ssd_object_detector/output/image" />
  </node>

</launch>
